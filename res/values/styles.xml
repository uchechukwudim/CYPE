<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
         <style name="Theme.Cype" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_cype</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Cype</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cype</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Cype</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Cype</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Cype</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_cype</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_cype</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Cype</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Cype.Widget</item>

    </style>
    
         <style name="Theme.dialog" parent="@android:style/Theme.Holo.Dialog"></style>

    <style name="ActionBar.Solid.Cype" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_cype</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_cype</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_cype</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cype</item>
    </style>

    <style name="ActionBar.Transparent.Cype" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_cype</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cype</item>
    </style>

    <style name="PopupMenu.Cype" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cype</item>	
    </style>

    <style name="DropDownListView.Cype" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_cype</item>
    </style>

    <style name="ActionBarTabStyle.Cype" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_cype</item>
    </style>

    <style name="DropDownNav.Cype" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_cype</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cype</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_cype</item>
    </style>
    
    <style name="ProgressBar.Cype" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_cype</item>
    </style>
    
    <style name="ActionButton.CloseMode.Cype" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_cype</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Cype.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Cype</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cype</item>
    </style>
    
    <style name="DefaultButton">
        <item name="android:layout_width">wrap_content</item>   
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/default_button_selector</item>
    </style>
</resources>
