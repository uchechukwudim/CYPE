    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tell_us"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="@string/clubs_bars"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/clubs_bar"
        android:textColorLink="@color/clubs_bar" />

    <ListView
        android:id="@+id/clubs_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/white" >

    </ListView>

    <TextView
        android:id="@+id/C_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cant_find"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tell_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/C_find"
        android:text="@string/tell_us"
        android:textColor="@color/red"
        android:textSize="12sp" />

</RelativeLayout>