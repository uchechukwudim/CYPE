<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">

        <!-- Club Registration Form -->
        <LinearLayout
           
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
           >

            <EditText
                android:id="@+id/reg_clubname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/sh_file"
                android:hint="Club or Bar Name"
                android:minHeight="45dp"
                android:padding="7dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/reg_clubaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/sh_file"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:minHeight="150dp"
                android:padding="7dp"
                android:scrollbars="vertical" />

            <EditText
                android:id="@+id/reg_clubcity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/sh_file"
                android:hint="City"
                android:minHeight="45dp"
                android:padding="7dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/reg_clubstate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/sh_file"
                android:hint="State/County"
                android:minHeight="45dp"
                android:padding="7dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/reg_clubzipcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/sh_file"
                android:hint="Zip Code"
                android:minHeight="45dp"
                android:padding="7dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/reg_clubcountry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/sh_file"
                android:hint="Country"
                android:minHeight="45dp"
                android:padding="7dp"
                android:singleLine="true" />

            <!-- Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginTop="10dip"
               >

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/light_blue"
                    android:maxHeight="50dp"
                    android:minHeight="45dp"
                    android:padding="5dp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/light_blue"
                    android:maxHeight="50dp"
                    android:minHeight="45dp"
                    android:padding="5dp"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="18sp" />




            </LinearLayout>
        </LinearLayout>
        <!-- Form End -->
    </RelativeLayout>
</ScrollView>