<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center" 


    >
    
    <TextView
        android:id="@+id/shared_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/shared_pic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/clubs_bar" />

    <RelativeLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >  

        <TextView
            android:id="@+id/im_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="@string/pic_name"
            android:textColor="@color/clubs_bar" />

    </RelativeLayout>

    

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="center"
   >

    <ViewFlipper
        android:id="@+id/viewFlipper1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/cab_background_bottom_cype" >

        
        
    </ViewFlipper>



</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom" 
    android:layout_marginTop="5dp">

    <Button
        android:id="@+id/del_image"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/del_icon"
        android:visibility="gone"
         />

    <Button
        android:id="@+id/next_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/next_iconn" />

    <Button
        android:id="@+id/prev_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/prev_iconn"
         />

</RelativeLayout>

</LinearLayout>